<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4">
        <div style="padding: 5px 0 5px 0;">
            <div class="card card-purple">
                <div class="card-header">
                    <div class="row">
                        <div class="col-sm-3">
                            <i class="fa fa-globe fa-5x"></i>
                        </div>
                        <div class="col-sm-9 text-right">
                            <div class="huge" id="TotalCities">
                                <span>
                                    @if (ViewBag.TotalCities != null)
                                    {
                                        @ViewBag.TotalCities
                                    }
                                </span>

                            </div>
                            <div>Total cities</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <br />

    <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4">
        <div style="padding: 5px 0 5px 0;">
            <div class="card card-blue">
                <div class="card-header">
                    <div class="row">
                        <div class="col-sm-3">
                            <i class="fa fa-industry fa-5x"></i>
                        </div>
                        <div class="col-sm-9 text-right">
                            <div class="huge" id="TotalDistricts">
                                <span>
                                    @if (ViewBag.TotalDistricts != null)
                                    {
                                        @ViewBag.TotalDistricts
                                    }
                                </span>

                            </div>
                            <div>Total districts</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <br />
    <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4">
        <div style="padding: 5px 0 5px 0;">
            <div class="card card-grey">
                <div class="card-header">
                    <div class="row">
                        <div class="col-sm-3">
                            <i class="fa fa-home fa-5x"></i>
                        </div>
                        <div class="col-sm-9 text-right">
                            <div class="huge" id="TotalAreas">
                                <span>
                                    @if (ViewBag.TotalAreas != null)
                                    {
                                        @ViewBag.TotalAreas
                                    }
                                </span>

                            </div>
                            <div>Total areas</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <br />
</div>
